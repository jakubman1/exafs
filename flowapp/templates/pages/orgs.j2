{% extends 'layouts/default.j2' %}
{% block title %}Flowspec Organziations{% endblock %}
{% block content %}
    <table class="table table-hover">
    <tr>
    <th>Name</th>
    <th>Adress Range</th>
    <th>action</th>
    </tr>
    {% for org in orgs %}
        <tr>
        <td>{{ org.name }}</td>
        <td>
            {% set rows = org.arange.split() %}
            {{ rows|join("<br>") }}
        </td>
        <td>
        <a class="btn btn-primary btn-sm" href="{{ url_for('admin.edit_organization', org_id=org.id) }}" role="button"
          data-bs-toggle="tooltip" data-bs-placement="top" title="Edit organization">
            <i class="bi bi-pencil-fill"></i>
        </a>
        <a class="btn btn-danger btn-sm" href="{{ url_for('admin.delete_organization', org_id=org.id) }}" role="button"
          data-bs-toggle="tooltip" data-bs-placement="top" title="Remove organization">
            <i class="bi bi-x-lg"></i>
        </a>
        </td>
        </tr>
    {% endfor %}
    </table>
{% endblock %}