{% extends 'layouts/default.j2' %}
{% block title %}DDoS Protector rules{% endblock %}
{% block content %}
    <div class="row">
        <div class="col">
            <h1>DDoS Protector rules</h1>
        </div>
    </div>
    <div class="row">
    {% if rules|length > 0 %}
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="ddp-table-header">
                <tr>
                    <th scope="col">Parent flowspec rule ID (IPv4/IPv6)</th>
                    <th scope="col">Preset</th>
                    <th scope="col">DDoS Protector device</th>
                    <th scope="col">DDoS Protector rule ID</th>
                    <th scope="col">Modifications</th>
                    {% if 3 in session['user_role_ids'] %}
                    <th scope="col">Tools</th>
                    {% endif %}
                </tr>
                </thead>
                <tbody>
                {% for rule in rules %}
                    <tr>
                        <td>{{ rule.flowspec4_id }} / {{ rule.flowspec6_id }}</td>
                        <td>{{ rule.preset.name }}
                            {% set preset = rule.preset.as_dict() %}
                            <button role="button" class="btn btn-info btn-sm" data-bs-toggle="tooltip"
                                    data-bs-placement="top" title="View preset values"
                                    onclick="ExaFS.showPresetModal('{{ rule.preset.name }}', {{ preset['fields'] }}, {{ preset['editable'] }} )">
                                <i class="bi bi-zoom-in"></i>
                            </button>
                        </td>
                        {% if rule.device.name %}
                            <td>{{ rule.device.name }} ({{ rule.device.url }})</td>
                        {% elif rule.device_id %}
                            <td>{{ rule.device.url }}</td>
                        {% else %}
                            <td class="fw-bold text-danger">No device</td>
                        {% endif %}
                        <td>
                            {% if rule.ddp_rule_id %}
                                {{ rule.ddp_rule_id }}
                            {% endif %}
                        </td>
                    <td>
                        {% if rule.modifications == '{}' %}
                            No
                        {% else %}
                            <span class="border-bottom" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-html="true"
                                  title='<code class="text-light">{{ rule.modifications }}</code>'>Yes</span>
                        {% endif %}
                    </td>
                    {% if 3 in session['user_role_ids'] %}
                        <td>
                            {% if rule.ddp_rule_id %}
                                <button class="btn btn-outline-secondary btn-sm">Check rule on device</button>
                                <a class="btn btn-danger btn-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Remove from device"
                                href="{{ url_for('ddos-protector.delete_ddp_rule', rule_extras_id=rule.id) }}">
                                    <i class="bi bi-shield-fill-x"></i>
                                </a>
                            {% else %}
                                <a class="btn btn-success btn-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Send to a device"
                                href="{{ url_for('ddos-protector.resend_ddp_rule', rule_extras_id=rule.id) }}">
                                    <i class="bi bi-shield-fill-plus"></i>
                                </a>

                            {% endif %}
                        {% if not rule.flowspec4_id and not rule.flowspec6_id %}
                            <button class="btn btn-danger btn-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Remove local copy">
                                    <i class="bi bi-trash-fill"></i>
                                </button>
                        {% endif %}
                        </td>
                    {% endif %}
                    </tr>
                {% endfor %}

                </tbody>
            </table>
        </div>
    {% else %}
      <div class="text-center">
        <h2 class="text-center">No DDoS Protector rules yet</h2>
        <p>Add rules by creating an IPv4 or IPv6 Flowspec rule, selecting the action "Redirect to DDoS Protector", and choosing a mitigation strategy.</p>
      </div>
    {% endif %}
    </div>
    <div class="modal fade" id="presetDetailModal" data-bs-backdrop="static">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="presetDetailTitle"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th scope="col">Key</th>
                            <th scope="col">Value</th>
                            <th scope="col">User can edit</th>
                        </tr>
                        </thead>
                        <tbody id="presetDetailBody">

                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}